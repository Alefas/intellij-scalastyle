<idea-plugin version="2">
  <id>scalastyle</id>
  <name>Scalastyle support</name>
  <version>1.0</version>
  <vendor email="alexander.podkhalyuzin@jetbrains.com" url="http://www.jetbrains.com">JetBrains</vendor>

  <description><![CDATA[
      Scalastyle tool support in IntelliJ IDEA
      ]]></description>

  <idea-version since-build="122.519"/>

  <depends>org.intellij.scala</depends>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <localInspection id="ScalastyleBasedInspection" shortName="ScalastyleBasedInspection" displayName="Scalastyle based inspection"
                     implementationClass="org.intellij.scalastyle.inspection.ScalastyleBasedInspection"
                     enabledByDefault="true" language="Scala"/>
  </extensions>
</idea-plugin>